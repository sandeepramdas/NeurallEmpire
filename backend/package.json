{
  "name": "neurallempire-backend",
  "version": "2.0.0",
  "description": "Modern SaaS Backend API for NeurallEmpire",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "start:dev": "tsx src/server.ts",
    "dev": "tsx watch src/server.ts",
    "build": "npx prisma generate && tsc --noEmit false --skipLibCheck || true && tsc-alias && cp -r public dist/public || true",
    "build:strict": "tsc && tsc-alias",
    "postinstall": "prisma generate",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "migrate": "prisma migrate dev",
    "generate": "prisma generate",
    "studio": "prisma studio",
    "seed": "tsx src/prisma/seed.ts",
    "docker:build": "docker build -t neurallempire-backend .",
    "docker:run": "docker run -p 3001:3001 neurallempire-backend"
  },
  "keywords": [
    "neurallempire",
    "saas",
    "api",
    "backend",
    "ai",
    "marketing",
    "typescript",
    "prisma",
    "multi-tenant"
  ],
  "author": "Sandeep Ramdas <sandeepramdaz@neurallempire.com>",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "@sentry/node": "^10.17.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^6.0.0",
    "@types/express-session": "^1.17.10",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/passport": "^1.0.16",
    "@types/passport-facebook": "^3.0.3",
    "@types/passport-google-oauth20": "^2.0.14",
    "anthropic": "^0.0.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.16.5",
    "cloudinary": "^1.41.0",
    "compression": "^1.7.4",
    "concurrently": "^8.2.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csrf-csrf": "^4.0.3",
