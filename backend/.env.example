# =============================================================================
# NEURALLEMPIRE BACKEND - ENVIRONMENT CONFIGURATION
# =============================================================================

# -----------------------------------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=3001
APP_NAME=NeurallEmpire
APP_VERSION=2.0.0

# -----------------------------------------------------------------------------
# BASE URLS & DOMAINS
# -----------------------------------------------------------------------------
BASE_DOMAIN=neurallempire.com
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001
API_BASE_URL=http://localhost:3001/api
PRODUCTION_URL=https://www.neurallempire.com

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
# PostgreSQL (Primary - Supabase)
DATABASE_URL=postgresql://username:password@localhost:5432/neurallempire

# MongoDB (Legacy - Optional)
MONGODB_URI=mongodb://localhost:27017/neurallempire

# -----------------------------------------------------------------------------
# JWT & AUTHENTICATION
# -----------------------------------------------------------------------------
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d
JWT_COOKIE_EXPIRE=7

# -----------------------------------------------------------------------------
# SECURITY CONFIGURATION
# -----------------------------------------------------------------------------
# Cookie & Session
COOKIE_SECRET=your-cookie-secret-change-in-production-min-32-chars
SESSION_SECRET=your-session-secret-key-change-in-production
BCRYPT_SALT_ROUNDS=12
ENCRYPTION_KEY=your-encryption-key-must-be-32-characters-exactly

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://www.neurallempire.com

# -----------------------------------------------------------------------------
# RATE LIMITING
# -----------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
AUTH_RATE_LIMIT_MAX=50

# -----------------------------------------------------------------------------
# MONITORING & ERROR TRACKING
# -----------------------------------------------------------------------------
# Sentry (Error Monitoring)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Logging
LOG_LEVEL=info
LOG_FILE=logs/neurallempire.log

# -----------------------------------------------------------------------------
# EMAIL CONFIGURATION
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@neurallempire.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM=NeurallEmpire <noreply@neurallempire.com>

# Email Service (Alternative)
EMAIL_SERVICE=gmail
EMAIL_USER=sandeepramdaz@neurallempire.com
EMAIL_PASS=your-app-password

# -----------------------------------------------------------------------------
# PAYMENT GATEWAYS
# -----------------------------------------------------------------------------
# Razorpay
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# -----------------------------------------------------------------------------
# CLOUD STORAGE
# -----------------------------------------------------------------------------
# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET=neurallempire-uploads

# Cloudinary (Alternative)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# -----------------------------------------------------------------------------
# CLOUDFLARE CONFIGURATION
# -----------------------------------------------------------------------------
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ZONE_ID=your_zone_id
CLOUDFLARE_ACCOUNT_ID=your_account_id

# -----------------------------------------------------------------------------
# CACHING & SESSION STORAGE
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
# Security Features
ENABLE_CSRF=true
ENABLE_RATE_LIMITING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=false

# Authentication Features
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_TWO_FACTOR_AUTH=false

# Business Features
ENABLE_MULTI_COMPANY=true
ENABLE_SUBDOMAIN_ROUTING=true
ENABLE_CUSTOM_DOMAINS=false

# -----------------------------------------------------------------------------
# OAUTH SOCIAL AUTHENTICATION
# -----------------------------------------------------------------------------
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# Facebook OAuth
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_CALLBACK_URL=http://localhost:3001/api/auth/facebook/callback

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:3001/api/auth/github/callback

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_CALLBACK_URL=http://localhost:3001/api/auth/linkedin/callback

# -----------------------------------------------------------------------------
# EXTERNAL APIs & SERVICES
# -----------------------------------------------------------------------------
# OpenAI
OPENAI_API_KEY=sk-your_openai_api_key

# Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# -----------------------------------------------------------------------------
# DEVELOPMENT & DEBUGGING
# -----------------------------------------------------------------------------
# Enable debug logging
DEBUG=neurallempire:*

# Pretty print JSON responses
PRETTY_JSON=true

# Enable API documentation
ENABLE_API_DOCS=true

# =============================================================================
# NOTES:
# - Copy this file to .env and fill in your actual values
# - NEVER commit .env file to version control
# - Generate strong secrets for production (use openssl rand -base64 32)
# - Update all "change-in-production" values before deploying
# =============================================================================
