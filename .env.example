# ==================== DATABASE ====================
DATABASE_URL="postgresql://username:password@localhost:5432/neurallempire?schema=public"

# ==================== JWT & SECURITY ====================
JWT_SECRET="your-super-secret-jwt-key-256-bits-long-change-this-immediately"
JWT_EXPIRES_IN="7d"

# ==================== SERVER CONFIG ====================
NODE_ENV="development"
PORT="3001"

# ==================== CORS ORIGINS ====================
FRONTEND_URL="http://localhost:3000"
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001,https://neurallempire.com,https://www.neurallempire.com"

# ==================== PAYMENT GATEWAYS ====================
# Stripe
STRIPE_PUBLIC_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Razorpay
RAZORPAY_KEY_ID="rzp_test_..."
RAZORPAY_KEY_SECRET="your_razorpay_secret"

# ==================== EMAIL SERVICE ====================
# SMTP Configuration (Choose one)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="noreply@neurallempire.com"

# OR SendGrid
SENDGRID_API_KEY="SG...."
SENDGRID_FROM_EMAIL="noreply@neurallempire.com"

# OR Mailgun
MAILGUN_API_KEY="your-mailgun-api-key"
MAILGUN_DOMAIN="mg.neurallempire.com"

# ==================== CLOUD STORAGE ====================
# AWS S3
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="neurallempire-uploads"

# OR Cloudinary
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# ==================== DNS & SUBDOMAIN MANAGEMENT ====================
# Cloudflare (for subdomain creation)
CLOUDFLARE_EMAIL="your-email@example.com"
CLOUDFLARE_API_KEY="your-cloudflare-api-key"
CLOUDFLARE_ZONE_ID="your-zone-id"

# ==================== SOCIAL AUTH ====================
# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Facebook OAuth
FACEBOOK_APP_ID="your-facebook-app-id"
FACEBOOK_APP_SECRET="your-facebook-app-secret"

# LinkedIn OAuth
LINKEDIN_CLIENT_ID="your-linkedin-client-id"
LINKEDIN_CLIENT_SECRET="your-linkedin-client-secret"

# GitHub OAuth
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# ==================== MONITORING & ANALYTICS ====================
# Sentry (Error Tracking)
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# Google Analytics
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# ==================== RATE LIMITING ====================
REDIS_URL="redis://localhost:6379"

# ==================== WEBHOOK SECRETS ====================
STRIPE_WEBHOOK_SECRET="whsec_..."
RAZORPAY_WEBHOOK_SECRET="your-razorpay-webhook-secret"